---
layout: layouts/base.njk
templateClass: tmpl-post
---
<div id="postWrapper">
  {%- include "sidebar.html" -%}
  {%- include "internalSidebar.html" -%}
  <div id="postContent">
    <h2>{{ title }}</h2>
    {%- if subtitle != "" -%}
    <h2 class="subtitle">{{ subtitle }}</h2>
    {%- endif -%}
    {{ content | safe }}
    {%- if title != "Essays" -%}
      <a id="backIndex" class="backNihilo" href="/posts/{{ 'Essays' | slug }}">Back to Essays</a>
    {%- endif -%}
  </div>

  {%- include "footer.html" -%}
</div>
